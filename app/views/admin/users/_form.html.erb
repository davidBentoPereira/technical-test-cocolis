
<%= form_with(model: [:admin, user], local: true) do |f| %>
  <% if user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(user.errors.count, "error") %> ont empêché cet utilisateur d'être sauvegardé:</h2>
      <ul>
        <% user.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-3">
    <%= f.label :email, class: 'form-label' %>
    <%= f.email_field :email, class: 'form-control' %>
  </div>

  <div class="row">
    <div class="col">
      <%= f.label :first_name, class: 'form-label' %>
      <%= f.text_field :first_name, class: 'form-control' %>
    </div>
    <div class="col">
      <%= f.label :last_name, class: 'form-label' %>
      <%= f.text_field :last_name, class: 'form-control' %>
    </div>
  </div>

  <div class="row mt-3">
    <div class="col">
      <%= f.label :password, class: 'form-label' %>
      <%= f.password_field :password, class: 'form-control', autocomplete: "current-password", value: :current_password %>
    </div>
    <div class="col">
      <%= f.label :password_confirmation, class: 'form-label' %>
      <%= f.password_field :password_confirmation, value: :current_password, class: 'form-control' %>
    </div>
  </div>

  <div class="row mt-3">
    <div class="col">
      <div class="form-check">
        <%= f.check_box :admin, class: 'form-check-input' %>
        <%= f.label :admin, 'Administrateur ?', class: 'form-check-label' %>
      </div>
    </div>
  </div>

  <div class="mt-3">
    <%= f.submit "Envoyer", class: 'btn btn-primary' %>
  </div>
<% end %>
