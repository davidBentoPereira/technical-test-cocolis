<header class="p-3 bg-dark text-white">
  <div class="container">
    <div class="d-flex flex-wrap align-items-center justify-content-center justify-content-lg-start">
      <%= link_to root_path, class: 'd-flex align-items-center mb-2 mb-lg-0 text-white text-decoration-none' do %>
        <svg class="bi me-2" width="40" height="32" role="img" aria-label="Bootstrap"><use xlink:href="#bootstrap"/></svg>
      <% end %>

      <ul class="nav col-12 col-lg-auto me-lg-auto mb-2 justify-content-center mb-md-0">
        <li><%= link_to root_path, class: 'nav-link px-2 text-white' do %><i class="fa-solid fa-house"></i> Accueil<% end %></li>
        <% if user_signed_in? && current_user.admin %>
          <li><%= link_to admin_users_path, class: 'nav-link px-2 text-white' do %><i class="fa-solid fa-users"></i> Utilisateurs<% end %></li>
          <li><%= link_to new_user_invitation_path, class: 'nav-link px-2 text-white' do %><i class="fa-solid fa-plus"></i> Inviter un utiliateur<% end %></li>
        <% end %>
      </ul>

      <div class="text-end">
        <% unless user_signed_in? %>
          <!-- Sign Up -->
          <%= link_to new_user_registration_path, class: 'btn btn-outline-light me-2' do %>Inscription<% end %>
          <!-- Login -->
          <%= link_to new_user_session_path, class: 'btn btn-outline-light me-2' do %>Connexion<% end %>
        <% end %>

        <% if user_signed_in? %>
          <!-- Edit Account -->
          <%= link_to edit_user_registration_path, class: 'btn btn-secondary' do %><i class="fa-solid fa-gear"></i> Mon Compte<% end %>
          <!-- Log Out -->
          <%= link_to destroy_user_session_path, class: 'btn btn-danger' do %><i class="fa-solid fa-power-off"></i> DÃ©connexion<% end %>
        <% end %>
      </div>
    </div>
  </div>
</header>



