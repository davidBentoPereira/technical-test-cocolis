<header class="p-3 bg-dark text-white">
  <div class="container">
    <div class="d-flex flex-wrap align-items-center justify-content-center justify-content-lg-start">
      <%= link_to root_path, class: 'd-flex align-items-center mb-2 mb-lg-0 text-white text-decoration-none' do %>
        <svg class="bi me-2" width="40" height="32" role="img" aria-label="Bootstrap"><use xlink:href="#bootstrap"/></svg>
      <% end %>

      <ul class="nav col-12 col-lg-auto me-lg-auto mb-2 justify-content-center mb-md-0">
        <li><%= link_to 'Home', root_path, class: 'nav-link px-2 text-white' %></li>
        <% if user_signed_in? && current_user.admin %>
          <li><%= link_to 'Utilisateurs', admin_users_path, class: 'nav-link px-2 text-white' %></li>
          <li><%= link_to 'Inviter un utilisateur', new_user_invitation_path, class: 'nav-link px-2 text-white' %></li>
        <% end %>
      </ul>

      <div class="text-end">
        <% unless user_signed_in? %>
          <!-- Login -->
          <%= link_to 'Connexion', new_user_session_path, class: 'btn btn-outline-light me-2' %>
        <% end %>

        <% if user_signed_in? %>
          <!-- Log Out -->
          <%= link_to 'DÃ©connexion', destroy_user_session_path, class: 'btn btn-danger' %>
        <% end %>
      </div>
    </div>
  </div>
</header>



